---
import Layout from "../layouts/Layout.astro";
import Formulario from "../components/Formulario.astro";
import type { ContactItem } from "../data/contacto";
import Direccion from "../assets/iconos/direccion.svg";
import Telefono from "../assets/iconos/telefono.svg";
import Email from "../assets/iconos/email.svg";
const infoItems: ContactItem[] = [
  {
    title: "Dirección",
    content: "Ubaldo Mansilla 131, 5700328 Castro, Los Lagos",
    icon: Direccion,
  },
  {
    title: "Teléfono",
    content: "+56 9 12394920",
    icon: Telefono,
  },
  {
    title: "Email",
    content: "contacto@gmail.cl",
    icon: Email,
  },
];


const mapSrc =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2942.4047677307717!2d-73.77879212305012!3d-42.48294671503579!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x962219aab6135abf%3A0xa611de6e11e7980d!2sUniversidad%20de%20Los%20Lagos%20-%20Sede%20Castro!5e0!3m2!1ses!2scl!4v1758594949118!5m2!1ses!2scl";
---

<Layout title="Contacto">
 <div class="container mx-auto m-12 flex justify-center py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start max-w-5xl w-full px-6">
    
    <!-- Información de contacto -->
    <div class="bg-white rounded-2xl shadow-lg p-8 space-y-4">
      <h2 class="text-2xl font-semibold text-gray-900">Contáctanos</h2>

      {infoItems.map((item) => (
        <p class="text-gray-700 flex items-center gap-2">
          <img src={item.icon.src} alt={item.title} class="w-5 h-5" />
          {item.title}: {item.content}
        </p>
      ))}

      <iframe
        src={mapSrc}
        width="100%"
        height="250"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        class="rounded-xl shadow-sm"
      ></iframe>
    </div>

    <div class="bg-white rounded-2xl shadow-lg p-8">
      <Formulario />
    </div>
  </div>
</div>

</Layout>
