---
interface Props{
    img: string;
    alt: string;
    title: string;
    description: string;
    href: string;
    autor: string;
}
const {img,alt,title,description,href,autor}= Astro.props
---

<article class="articulo flex flex-col h-full">
    <!-- Imagen -->
    <div class="h-40 sm:h-44 md:h-48 overflow-hidden">
        <img
                src={img}
                alt={alt}
                class="w-full h-48 sm:h-60 md:h-64 object-cover"
        />
    </div>

    <!-- Contenido -->
    <div class="flex flex-col justify-between flex-grow bg-gray-100 rounded-b-lg p-4 sm:p-5">
        <div>
            <h3 class="text-lg sm:text-xl font-bold mb-1 line-clamp-2">{title}</h3>
            <p class="text-gray-600 text-sm sm:text-base mb-3 line-clamp-3">{description}</p>
        </div>

        <div class="flex items-center justify-between mt-auto">
            <p class="text-gray-500 text-sm">{autor}</p>
            <a href={href} class="btn-article">Leer m√°s</a>
        </div>
    </div>
</article>


