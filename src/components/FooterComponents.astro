---
import { Image } from "astro:assets";
import { FooterData } from "../data/FooterData";
import { SocialData } from "../data/SocialData";
import LogoLight from "../assets/logo/logo-blanco.svg"
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-6 py-10">
    <!-- Grid principal de 3 columnas -->
    <div class="w-full grid grid-cols-1 md:grid-cols-1 lg:grid-cols-3 gap-8 text-center justify-items-center">
      
      <!--  Logo -->
      <div class="flex flex-col items-center ">
        <Image src={LogoLight} class="w-16 h-auto" alt="" />
      </div>

      <!--  Redes sociales -->
      <div class="flex flex-col items-center justify-center">
        <h5 class="text-white font-semibold text-base mb-3 tracking-wide">
          {SocialData.title}
        </h5>
        <div class="flex flex-wrap justify-center items-center gap-4">
          {SocialData.links.map((red) => (
            <a
              href={red.href}
              target="_blank"
              class="flex items-center gap-2 text-gray-300 hover:text-yellow-400 transition-colors duration-300 text-sm"
            >
              <img src={red.icon} alt={red.name} class="w-5 h-5" />
              <span>{red.name}</span>
            </a>
          ))}
        </div>
      </div>

      <!--  Contacto (mantenido con mapeo FooterData) -->
      <div class="flex flex-col items-center justify-center">
        {FooterData.map((lista) => (
          <div class="flex flex-col items-center">
            <h5 class="text-white font-semibold text-base mb-2 tracking-wide">
              {lista.title}
            </h5>
            <ul class="space-y-0.5 text-center">
              {lista.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-gray-300 hover:text-yellow-400 transition-colors duration-300 text-sm"
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

    </div>

    <!-- Línea inferior -->
    <div class="w-full mt-10 border-t border-gray-700 pt-4 text-center text-xs text-gray-500">
      © {new Date().getFullYear()} — Todos los derechos reservados.
    </div>
  </div>
</footer>
