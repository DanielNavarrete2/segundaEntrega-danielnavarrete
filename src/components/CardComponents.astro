---
interface Props {
  href: string;
  img: string;
  alt: string;
  title: string;
  subtitle: string;
  detail: string;
}

const { href, img, alt, title, subtitle, detail } = Astro.props;
---

<div class="group w-82 bg-gradient-to-br from-white to-orange-50/30 rounded-2xl border border-orange-100 shadow-lg overflow-hidden gap-8">
    <!-- Imagen -->
    <div class="relative h-56 overflow-hidden bg-gradient-to-br from-orange-50 to-white">
        <img
                src={img}
                alt={alt}
                class="w-full h-full object-cover"
        />
    </div>

    <!-- Contenido -->
    <div class="p-6 flex flex-col gap-3">
        <h3 class="text-gray-900 text-xl font-bold tracking-tight">
            {subtitle}
        </h3>

        <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">{title}</p>

        <!-- Separador decorativo -->
        <div class="w-16 h-0.5 bg-gradient-to-r from-orange-400 to-orange-200 rounded-full mt-1"></div>

        <a href={href} class="mt-2">
            <button
                    class="w-full cursor-pointer bg-gradient-to-r from-orange-500 to-orange-600 text-white text-sm font-semibold py-3 rounded-xl hover:opacity-90 transition-opacity duration-200"
            >
                {detail}
            </button>
        </a>
    </div>
</div>


