---
import LogoComponents from "./LogoComponents.astro";
import { ItemMenu } from "../data/ItemMenu";
---

<header class="bg-white shadow-md border-b border-gray-200 w-full z-50">
  <div class="container mx-auto flex items-center justify-between px-4 py-4 md:px-8">

    <!-- Logo -->
    <div class="flex items-center">
      <LogoComponents />
      <h2 class="pl-4 text-3xl">MusicZone</h2>
    </div>

    <!-- Botón hamburguesa (solo móvil) -->
    <button id="menu-btn" aria-label="Abrir menú" class="md:hidden focus:outline-none">
      <svg class="w-8 h-8 text-black transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Navbar desktop -->
    <nav class="hidden md:flex flex-1 justify-end">
      <div class="flex items-center gap-2">
        {ItemMenu.map((item) => (
          <a href={item.href} class="boton-header">
            {item.texto}
          </a>
        ))}
      </div>
    </nav>
  </div>

  <!-- Menú móvil -->
  <nav id="mobile-menu"
    class=" hidden flex flex-col items-center gap-4 bg-gray-100 py-4 md:hidden transition-all duration-300">
    {ItemMenu.map((item) => (
      <a href={item.href} class="boton-header">
        {item.texto}
      </a>
    ))}
  </nav>

  <!-- JS toggle menú -->
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('menu-btn');
      const menu = document.getElementById('mobile-menu');

      btn?.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    });
  </script>
</header>
